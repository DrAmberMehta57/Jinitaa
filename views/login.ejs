<%- include('partials/header') %>

    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden mt-10">
        <div class="bg-clinic-blue py-4 px-6 text-center">
            <h2 class="text-xl font-bold text-white">Doctor Login</h2>
        </div>

        <form action="/admin/login" method="POST" class="p-8 space-y-6">

            <% if (typeof error !=='undefined' && error) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p>
                        <%= error %>
                    </p>
                </div>
                <% } %>

                    <div>
                        <label class="block text-black font-semibold mb-1">Username</label>
                        <input type="text" name="username" required
                            class="w-full border-2 border-gray-300 rounded p-2 focus:border-clinic-blue focus:outline-none">
                    </div>

                    <div>
                        <label class="block text-black font-semibold mb-1">Password</label>
                        <input type="password" name="password" required
                            class="w-full border-2 border-gray-300 rounded p-2 focus:border-clinic-blue focus:outline-none">
                    </div>

                    <button type="submit"
                        class="w-full bg-clinic-blue hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200">
                        Login
                    </button>

        </form>
    </div>

    <%- include('partials/footer') %>