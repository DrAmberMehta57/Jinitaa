<%- include('partials/header') %>

    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden text-center p-8 mt-10">
        <div class="mb-4 text-clinic-green">
            <svg class="w-20 h-20 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
